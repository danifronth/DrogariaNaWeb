 <%- include('partials/header.ejs') %>

 <!--CONTAINER SIDEBAR-->

<aside class="componentes-prateleira">
    <div class="test">
        <div class="container-sidebar">
            <h3 class="order-by">Ordenar Por:</h3>
            <h3 class="filters-prateleiras" id="filters">Filtros</h3>
            <ul class="lista-ordenar-por">
                <li><a href="../public/imgs/ordenarPor/relevancia.png"></a> Relevância</li>
                <li><a href="../public/imgs/ordenarPor/menorPreco.png"></a>Menor Preço</li>
                <li><a href="../public/imgs/ordenarPor/maiorPreco.png"></a>Maior Preço</li>
                <li><a href="../public/imgs/ordenarPor/melhoresAvaliados.png"></a>Melhores Avaliados</li>
                <li><a href="../public/imgs/ordenarPor/maiorDesconto.png"></a>Maior Desconto</li>
                <li><a href="../public/imgs/ordenarPor/maisVendidos.png"></a>Mais Vendidos</li>
            </ul>
        </div>
        <h3>Marcas:</h3>
        <nav>
            <input type="text" placeholder="buscar..">
            <button>pesquisar</button>
        </nav>
        <nav>
            <h3>Preço:</h3>
            <ul>
                <li>R$ 2,99 - R$ 5,99</li>
                <li>R$ 5,99 - R$ 19,99</li>
                <li>R$ 19,99 - R$ 49,99</li>
            </ul>
        </nav>
        <h3>Forma Fármaco:</h3>
        <nav>
            <input type="checkbox" name="comprimidos" id="comprimidos"> Comprimidos<br>
            <input type="checkbox" name="solgotas" id="solgotas"> Solução Gotas<br>

        </nav>
        <h3>Quantidade:</h3>
        <nav>
            <input type="checkbox" name="comprimidos" id="comprimidos"> 10 Comprimidos<br>
            <input type="checkbox" name="comprimidos" id="comprimidos"> 12 Comprimidos<br>
            <input type="checkbox" name="solgotas" id="solgotas"> 10ml Solução<br>
            <input type="checkbox" name="solgotas" id="solgotas"> 100ml Solução<br>
        </nav>
    </div>


<!--CONTAINER PRATELEIRA E SIDEBAR-->

    <main class="container">
        <div class="container-prateleira">
            <ul class="products">
                <% products.forEach(products => { %>
                    <a href="/products/productDetail/<%= products.idProduct %>">        
                        <li>
                            <img class="imgProduct" src="/imgs/<%= products.imgName %>" alt="">
                            <p class="nameProduct"><%= products.productName %><p>
                            <p class="price"><%= products.price %></p>
                            <button class="lessSignal">-</button>
                            <button class="plusSignal">+</button>
                            <button class="callToAction">COMPRAR</button>
                        </li>
                    </a>
                <% }) %>
                
            </ul>
        </div>
    </main>

</aside>